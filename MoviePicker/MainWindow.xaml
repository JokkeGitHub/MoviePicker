                        BorderThickness="1" BorderBrush="Black">
                    </TextBox>

                    <Button Name="T4PeopleInvolvedButton" Content="People involved"
                        Grid.Column="1" Grid.ColumnSpan="6"
                        Grid.Row="14" Grid.RowSpan="1">
                    </Button>

                </Grid>
            </TabItem>
